# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/quartier-connect

# Auth
JWT_SECRET=change_me

# CORS (comma-separated allowlist)
# Example: https://quartier-b3o.pages.dev,http://localhost:3000
CORS_ORIGINS=https://quartier-b3o.pages.dev,http://localhost:3000,http://127.0.0.1:3000

# Frontend base URL (used in password reset links)
FRONTEND_URL=https://quartier-b3o.pages.dev

# Emails (password reset)
RESEND_API_KEY=
FROM_EMAIL=onboarding@resend.dev

# Admin seed (optional)
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=Administrateur
ADMIN_FORCE_PASSWORD=false

# Media upload limits
MEDIA_MAX_FILE_MB=300

# Payments (optional)
PUBLIC_BASE_URL=https://your-api-domain.tld
PUBLIC_LAN_IP=
PAYMENT_CURRENCY=XOF
WAVE_CHECKOUT_URL=
WAVE_API_KEY=
ORANGE_CHECKOUT_URL=
ORANGE_API_KEY=
